{
  "apiVersion": "v1.2",
  "spec": {
    "kind": "Workflow",
    "spec": {
      "type": "sequential",
      "steps": [
        {
          "kind": "Project",
          "ref": "project",
          "spec": {
            "networking": {
              "tailscale": {
                "authKeyTags": [],
                "enabled": false
              },
              "allowedIngressProjects": []
            },
            "name": "gtm-demo",
            "color": "#DBFE87",
            "region": "us-central"
          }
        },
        {
          "kind": "Workflow",
          "spec": {
            "type": "sequential",
            "context": {
              "projectId": "${refs.project.id}"
            },
            "steps": [
              {
                "kind": "BuildService",
                "spec": {
                  "buildArguments": {},
                  "buildFiles": {},
                  "billing": {
                    "buildPlan": "nf-compute-400-16"
                  },
                  "name": "builder",
                  "vcsData": {
                    "projectType": "github",
                    "accountLogin": "DeciderWill",
                    "projectUrl": "https://github.com/DeciderWill/node-express"
                  },
                  "buildConfiguration": {
                    "prRestrictions": [],
                    "branchRestrictions": []
                  },
                  "buildSettings": {
                    "dockerfile": {
                      "buildEngine": "kaniko",
                      "useCache": false,
                      "dockerWorkDir": "/",
                      "dockerFilePath": "/Dockerfile",
                      "buildkit": {
                        "useInternalCache": false,
                        "internalCacheStorage": 16384
                      }
                    }
                  },
                  "disabledCI": false
                },
                "ref": "builder"
              },
              {
                "kind": "Workflow",
                "spec": {
                  "type": "parallel",
                  "steps": [
                    {
                      "kind": "Addon",
                      "spec": {
                        "externalAccessEnabled": false,
                        "type": "postgresql",
                        "billing": {
                          "replicas": 1,
                          "storage": 4096,
                          "storageClass": "ssd",
                          "deploymentPlan": "nf-compute-20"
                        },
                        "tlsEnabled": true,
                        "typeSpecificSettings": {
                          "postgresqlConnectionPoolerReplicas": 2,
                          "postgresqlReadConnectionPoolerReplicas": 2
                        },
                        "name": "postgres-dev",
                        "version": "latest",
                        "backupSchedules": []
                      },
                      "ref": "postgres-dev"
                    },
                    {
                      "kind": "Addon",
                      "spec": {
                        "externalAccessEnabled": false,
                        "type": "redis",
                        "billing": {
                          "replicas": 1,
                          "storage": 4096,
                          "storageClass": "ssd",
                          "deploymentPlan": "nf-compute-10"
                        },
                        "tlsEnabled": true,
                        "name": "redis-dev",
                        "version": "latest"
                      },
                      "ref": "redis-dev"
                    }
                  ]
                }
              },
              {
                "kind": "SecretGroup",
                "spec": {
                  "type": "secret",
                  "secretType": "environment",
                  "priority": 10,
                  "secrets": {
                    "variables": {
                      "STRIPE_API": "helloworld"
                    },
                    "files": {}
                  },
                  "addonDependencies": [
                    {
                      "addonId": "${refs.postgres-dev.id}",
                      "keys": [
                        {
                          "keyName": "POSTGRES_URI",
                          "aliases": [
                            "DATABASE_URL"
                          ]
                        }
                      ]
                    },
                    {
                      "addonId": "${refs.redis-dev.id}",
                      "keys": [
                        {
                          "keyName": "REDIS_MASTER_URL",
                          "aliases": [
                            "QUEUE_URL"
                          ]
                        }
                      ]
                    }
                  ],
                  "name": "secrets-dev",
                  "restrictions": {
                    "restricted": false,
                    "nfObjects": [],
                    "tags": []
                  }
                },
                "ref": "secrets-dev"
              },
              {
                "kind": "DeploymentService",
                "spec": {
                  "deployment": {
                    "instances": 1,
                    "storage": {
                      "ephemeralStorage": {
                        "storageSize": 1024
                      },
                      "shmSize": 64
                    },
                    "docker": {
                      "configType": "default"
                    },
                    "internal": {
                      "id": "${refs.builder.id}",
                      "branch": "main"
                    },
                    "releaseFlowControlled": true
                  },
                  "runtimeEnvironment": {},
                  "runtimeFiles": {},
                  "billing": {
                    "deploymentPlan": "nf-compute-10"
                  },
                  "name": "api-dev",
                  "ports": [
                    {
                      "internalPort": 3000,
                      "public": true,
                      "protocol": "HTTP",
                      "name": "p01",
                      "domains": [],
                      "security": {
                        "sso": {},
                        "policies": [],
                        "credentials": [],
                        "verificationMode": "or",
                        "securePathConfiguration": {
                          "rules": []
                        }
                      },
                      "disableNfDomain": false
                    }
                  ]
                },
                "ref": "api-dev"
              },
              {
                "kind": "Pipeline",
                "spec": {
                  "stages": [
                    {
                      "name": "Development",
                      "nfObjects": [
                        {
                          "id": "${refs.api-dev.id}",
                          "type": "service"
                        },
                        {
                          "id": "${refs.postgres-dev.id}",
                          "type": "addon"
                        },
                        {
                          "id": "${refs.redis-dev.id}",
                          "type": "addon"
                        }
                      ],
                      "releaseFlow": {
                        "kind": "ReleaseFlow",
                        "spec": {
                          "apiVersion": "v1.2",
                          "spec": {
                            "kind": "Workflow",
                            "spec": {
                              "type": "sequential",
                              "steps": [
                                {
                                  "kind": "Build",
                                  "spec": {
                                    "reuseExistingBuilds": true,
                                    "buildRuleFallThroughHandling": "fail",
                                    "buildOverrides": {
                                      "buildArguments": {},
                                      "buildFiles": {}
                                    },
                                    "id": "${template.refs.builder.id}",
                                    "type": "service",
                                    "branch": "${refs.node-express.branch}",
                                    "sha": "${refs.node-express.sha}"
                                  },
                                  "condition": "success",
                                  "ref": "templaterefsbuilderid-build-1"
                                },
                                {
                                  "kind": "Release",
                                  "spec": {
                                    "type": "build",
                                    "origin": {
                                      "id": "${refs.templaterefsbuilderid-build-1.nfObjectId}",
                                      "branch": "${refs.templaterefsbuilderid-build-1.branch}",
                                      "build": "${refs.templaterefsbuilderid-build-1.id}"
                                    },
                                    "target": {
                                      "id": "${template.refs.api-dev.id}",
                                      "type": "service"
                                    }
                                  },
                                  "ref": "templaterefsapi-devid-release-1"
                                }
                              ]
                            }
                          },
                          "triggers": [
                            {
                              "ref": "node-express",
                              "vcsService": "github",
                              "accountLogin": "DeciderWill",
                              "repoUrl": "https://github.com/DeciderWill/node-express",
                              "branchRestrictions": [
                                "main"
                              ],
                              "prRestrictions": [],
                              "pathIgnoreRules": [],
                              "ciIgnoreFlags": [
                                "[skip ci]",
                                "[ci skip]",
                                "[no ci]",
                                "[skip nf]",
                                "[nf skip]",
                                "[northflank skip]",
                                "[skip northflank]"
                              ],
                              "ciIgnoreFlagsEnabled": true,
                              "isAllowList": false,
                              "ignoreDrafts": false
                            }
                          ],
                          "options": {
                            "concurrencyPolicy": "allow"
                          }
                        }
                      }
                    },
                    {
                      "name": "Staging"
                    },
                    {
                      "name": "Production"
                    }
                  ],
                  "name": "release"
                },
                "ref": "release"
              }
            ]
          }
        }
      ]
    }
  },
  "name": "gtm-demo",
  "description": "",
  "options": {
    "autorun": true,
    "concurrencyPolicy": "allow",
    "runOnUpdate": false
  },
  "gitops": {
    "repoUrl": "https://github.com/DeciderWill/git-ops-demo",
    "vcsService": "github",
    "accountLogin": "DeciderWill",
    "branch": "main",
    "filePath": "/northflank.json"
  },
  "$schema": "https://api.northflank.com/v1/schemas/template"
}
